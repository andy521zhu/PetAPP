<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefebe7"
    android:orientation="vertical" >


	<LinearLayout 
	    android:id="@+id/linearlayout_detail"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout
	        android:id="@+id/head_top"
	        android:orientation="vertical" 
	        android:background="@drawable/skin_header_bar_bg"
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	        >
	
	        <Button
	            android:id="@+id/bbs_back_detail"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:paddingLeft="10dp"
	            android:background="@drawable/head_btn_back"
	            android:layout_centerVertical="true"
	            />
	
	        <TextView 
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:textSize="14pt"
		         android:textColor="@android:color/black"
		         android:text="详细"
	         />
	     </RelativeLayout>
	    
	    
	    <ScrollView 
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:scrollbars="vertical"
	        >
	        <LinearLayout 
	            android:layout_width="fill_parent"
	        	android:layout_height="fill_parent"
	        	android:orientation="vertical"
	        	>
		    <!-- 帖子标题 -->
		    <TextView
		            android:id="@+id/bbs_title_detail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="啊 我去  妈蛋  今天我的宠物没有了 怎么办啊   求解"
		            android:textSize="15sp" 
		            android:textColor="@color/black"
		            android:layout_marginLeft="10dp"/>
		    
		    <!-- 作者头像 名字 以及发表日期 -->
			<LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginRight="10dp"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="10dp"
			        android:orientation="horizontal" 
			        >
		    		<!-- 作者头像 -->
			    	<ImageView
				        android:id="@+id/bbs_userpic_detail"
				        android:src="@drawable/actionbar_camera_icon_small"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        />
			    	<!-- 作者名字 以及发表日期 -->
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_marginRight="10dp"
				        android:layout_marginLeft="10dp"
				        android:orientation="vertical" 
				        >
							<!-- 名字-->
					         <TextView
					            android:id="@+id/bbs_username_detail"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="top"
					            android:text="andy521zhufuli"
					            android:textColor="@color/black"
					            android:textSize="18px" />
						    <!-- 发表日期 -->
						    <TextView
					            android:id="@+id/bbs_post_time_detail"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:text="2014-05-09"
					            android:textColor="@color/black"
					            android:textSize="18px" 
					            />
				      </LinearLayout><!-- 作者名字 以及发表日期 -->
		        </LinearLayout><!-- 作者头像 名字 以及发表日期 -->
		        
		        <!-- 帖子内容, 文字以及图片-->
		        <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:orientation="vertical" 
				        >
					<!-- 帖子内容文字-->
		            <TextView
		                android:id="@+id/bbs_content_detail"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="今天我丢了一个宠物了,  不知道怎么办了  好伤心  好伤心啊  怎么办呢 请问大家 我应该怎么办呢"
		                android:textColor="@color/black"
		                android:textSize="15sp"
		                />
		            <!-- 帖子内容  图片-->
		            <ImageView
				        android:id="@+id/bbs_content_pic_detail"
				        android:src="@drawable/actionbar_camera_icon_small"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        />
				</LinearLayout><!-- 作者头像 名字 以及发表日期 -->
				
				
			<!-- 作者头像 名字 以及发表日期 -->
			<LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:orientation="vertical" 
			        >
		           <TextView
		                android:id="@+id/bbs_content_detail"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="回复 : 1"
		                android:textSize="15sp"
		                android:textColor="@color/black"
		                />
		    </LinearLayout>
		    </LinearLayout>
			
		</ScrollView>	
	 </LinearLayout>
	 
	  <EditText
	      android:id="@+id/bbs_reply_detail"
	      android:layout_width="fill_parent"
	      android:layout_height="40dp"
	      android:layout_alignParentBottom="true"
	      android:gravity="center_vertical"
	      android:textCursorDrawable="@null"
	      android:textColor="@color/black"
	      android:hint="留个言吧" />
 
</RelativeLayout>

