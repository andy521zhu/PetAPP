<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefebe7"
    android:orientation="vertical" >


	<LinearLayout 
	    android:id="@+id/linearlayout_reply"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout
	        android:id="@+id/head_top"
	        android:orientation="vertical" 
	        android:background="@drawable/head"
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	        >
	
	        <Button
	            android:id="@+id/post_pet_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:paddingLeft="10dp"
	            android:background="@drawable/head_btn_back"
	            android:layout_centerVertical="true"
	            />
	
	        <TextView 
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:textSize="20sp"
		         android:textColor="@android:color/black"
		         android:text="发宠照片"
	         />
	        
	        <TextView
	            android:id="@+id/post_pet_confirm"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="确定"
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5dp"
	            />
	    </RelativeLayout>	
	    
	    
	    <EditText 
	        android:id="@+id/bbs_reply_content"
	    	android:layout_marginTop="10dp"
	        android:background="@color/white"
	        android:hint="说两句吧..."
	        android:layout_width="fill_parent"
	        android:layout_height="150dp"
	        android:gravity="top"
	        android:textColor="@android:color/black"
	        android:textCursorDrawable="@null"
	        />
	    
	    
	    <View 
	        android:background="@color/liuliu_divider_light" 
	        android:layout_width="fill_parent" 
	        android:layout_height="1.0dip" />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <ImageView
		        android:id="@+id/image_post_pet_image"
		        android:layout_width="85dip"
		        android:layout_height="85dip"
		        android:layout_marginTop="5dip"
		        android:layout_marginLeft="10dip"
		        android:scaleType="fitCenter"
		        android:src="@drawable/camera_bg_dark"
		        />
	    </LinearLayout>
	    
	    <View 
	        android:background="@color/liuliu_divider_light" 
	        android:layout_width="fill_parent" 
	        android:layout_height="1.0dip" 
	        android:layout_marginLeft="10dip"
	        />
	    
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >

	        <CheckBox
	            android:id="@+id/checkBox_pet_lost"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/shape_edit"
	            android:layout_marginLeft="10dip"
	            android:text="宠物丢失" 
	            android:paddingRight="5dip"/>

	        <CheckBox
	            android:id="@+id/checkBox_pet_found"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/shape_edit"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="10dip"
	            android:text="宠物找到" 
	            android:paddingRight="5dip"
	            />
	        
	    </RelativeLayout>
	    
	    
	    
	 </LinearLayout>
	 
	 
 
</LinearLayout>

