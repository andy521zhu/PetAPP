<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal" >
"
    
    <ImageView
        android:id="@+id/trayMasterPic"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <RelativeLayout
	        android:layout_marginRight="10dp"
	         android:layout_marginLeft="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp" >

	        <TextView
	        android:id="@+id/trayPetTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
	        android:text="Title"
	        android:textSize="22px" />

	        <TextView
	            android:id="@+id/trayPetTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:text="时间"
	            android:textSize="13px" />

	    </RelativeLayout>
	    
	    <TextView
            android:id="@+id/trayPetDescript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main text"
            android:textSize="13px" />

	    <GridLayout
	        android:layout_marginLeft="10dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:rowCount="3"
	        android:columnCount="3">
	        
	        <ImageView
	            android:id="@+id/trayPetPic_0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="0"
	            android:layout_row="0" />

	        <ImageView
	            android:id="@+id/trayPetPic_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="1"
	            android:layout_row="0" />

	        <ImageView
	            android:id="@+id/trayPetPic_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="2"
	            android:layout_row="0" />

	        <ImageView
	            android:id="@+id/trayPetPic_3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="0"
	            android:layout_row="1" />

	        <ImageView
	            android:id="@+id/trayPetPic_4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="1"
	            android:layout_row="1" />

	        <ImageView
	            android:id="@+id/trayPetPic_5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="2"
	            android:layout_row="1" />

	        <ImageView
	            android:id="@+id/trayPetPic_6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="0"
	            android:layout_row="2" />

	        <ImageView
	            android:id="@+id/trayPetPic_7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="1"
	            android:layout_row="2" />

	        <ImageView
	            android:id="@+id/trayPetPic_8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_column="2"
	            android:layout_row="2" />
	        
	    </GridLayout>
	    
	</LinearLayout>
    
 </LinearLayout>

