<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefebe7"
    android:orientation="vertical" >


	<LinearLayout 
	    android:id="@+id/linearlayout_reply"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout
	        android:id="@+id/head_top"
	        android:orientation="vertical" 
	        android:background="@drawable/skin_header_bar_bg"
	        android:layout_width="fill_parent" 
	        android:layout_height="50dip"
	        >
	
	        <Button
	            android:id="@+id/bbs_back_reply"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:paddingLeft="10dp"
	            android:background="@drawable/head_btn_back"
	            android:layout_centerVertical="true"
	            />
	
	        <TextView 
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:textSize="20sp"
		         android:textColor="@android:color/black"
		         android:text="评论"
	         />
	        
	        <TextView
	            android:id="@+id/bbs_confirm_repley"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="确定"
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="5dp"
	            />
	    </RelativeLayout>	
	    
	    
	    <EditText 
	        android:id="@+id/bbs_reply_content"
	    	android:layout_marginTop="10dp"
	        android:background="@color/white"
	        android:hint="发表评论"
	        android:layout_width="fill_parent"
	        android:layout_height="150dp"
	        android:gravity="top"
	        android:textColor="@android:color/black"
	        android:textCursorDrawable="@null"
	        />
	    
	    
	    
	 </LinearLayout>
	 
	 
 
</LinearLayout>

