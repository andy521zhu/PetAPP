<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:id="@+id/head_top_all_pet_pic"
	    android:orientation="vertical" 
	    android:background="@drawable/head"
	    android:layout_width="fill_parent" 
	    android:layout_height="50dip"
	    >
	
	    <Button
	        android:id="@+id/back_pet_pic"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:paddingLeft="10dp"
	        android:background="@drawable/head_btn_back"
	        android:layout_centerVertical="true"
	        />
	
	    <TextView 
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_centerInParent="true"
	      android:textSize="16pt"
	      android:textColor="@android:color/black"
	      android:text="所有照片"
	     />
	</RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshGridView 
	        android:id="@+id/all_pet_pic_pulltorefresh_gridview" 
	        android:padding="4.0dip" 
	        android:scrollbars="none" 
	        android:layout_width="fill_parent" 
	        android:layout_height="match_parent" 
	        android:horizontalSpacing="5.0dip" 
	        android:verticalSpacing="5.0dip" 
	        android:stretchMode="columnWidth" 
	        android:numColumns="3" />
    
    
</LinearLayout>
