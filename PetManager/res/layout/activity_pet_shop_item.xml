<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:gravity="center"
  		xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    >

    <com.gdut.pet.common.view.MyPetImageView
        android:layout_marginTop="5dip"
        android:id="@+id/image_shop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="#ffece6e1"
        android:src="@drawable/pet_lost" />
    
    <TextView 
        android:id="@+id/pet_shop_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广州市越秀区"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/image_shop"
        />
    
    <LinearLayout 
        android:id="@+id/layout_shop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="3.0dip" 
        android:paddingTop="3.0dip" 
        android:layout_alignRight="@id/image_pet_bbs_detail" 
        android:orientation="vertical"
        >
        <ImageView
	        android:id="@+id/shop_service_food" 
	        android:paddingRight="3.0dip" 
	        android:paddingTop="3.0dip" 
	        android:layout_width="28.0dip" 
	        android:layout_height="28.0dip"
	        android:background="@drawable/shop_service_food" 
	        android:contentDescription="@string/usercontent"
	        android:layout_weight="1"
	        android:scaleType="centerCrop"
	        />
    
    
    	<ImageView
    	    android:id="@+id/shop_service_cut"
	        android:paddingRight="3.0dip" 
	        android:paddingTop="3.0dip" 
	        android:layout_width="28.0dip" 
	        android:layout_height="28.0dip"
	        android:background="@drawable/shop_service_cut" 
	        android:contentDescription="@string/usercontent"
	        android:layout_weight="1"
	        />
    
    
		<!-- 这个是用户头像 -->
    	<ImageView
    	    android:id="@+id/shop_service_dazhen"
	        android:paddingRight="3.0dip" 
	        android:paddingBottom="3.0dip" 
	        android:layout_width="28.0dip" 
	        android:layout_height="28.0dip"
	        android:background="@drawable/shop_service_dazhen" 
	        android:contentDescription="@string/usercontent"
	        android:layout_weight="1"
	        />
    	<ImageView
    	    android:id="@+id/shop_service_sell"
	        android:paddingRight="3.0dip" 
	        android:paddingBottom="3.0dip" 
	        android:layout_width="28.0dip" 
	        android:layout_height="28.0dip"
	        android:background="@drawable/shop_service_sell" 
	        android:contentDescription="@string/usercontent"
	        android:layout_weight="1"
	        />
    	<ImageView
    	    android:id="@+id/shop_service_jiyang"
	        android:paddingRight="3.0dip" 
	        android:paddingBottom="3.0dip" 
	        android:layout_width="28.0dip" 
	        android:layout_height="28.0dip"
	        android:background="@drawable/shop_service_jiyang" 
	        android:contentDescription="@string/usercontent"
	        android:layout_gravity="bottom"
	        android:layout_weight="1"
	        />
        
    </LinearLayout>
    </RelativeLayout>
    
    
</RelativeLayout>